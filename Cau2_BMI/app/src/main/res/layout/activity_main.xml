<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#8DEC93"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtchieucao"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="296dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtcannang"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtchieucao" />

    <TextView
        android:id="@+id/txtchieucao"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="296dp"
        android:text="Chiều cao"
        android:textColor="#EC420D"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtcannang"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Cân nặng"
        android:textAlignment="viewStart"
        android:textColor="#EC420D"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtchieucao" />

    <Button
        android:id="@+id/btntinhtoan"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="456dp"
        android:background="@drawable/button"
        android:text="Tính toán"
        app:icon="@android:drawable/star_big_on"
        app:iconPadding="8dp"
        android:textColor="#EDC806"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtketqua"
        android:layout_width="342dp"
        android:layout_height="154dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:textColor="#EC420D"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btntinhtoan" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="50dp"
        android:text="Công thức"
        android:textColor="#EC420D"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/rdbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Centimet - Gram"
            android:textColor="#C51162"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rdbtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pound - Inches"
            android:textColor="#FFC51162"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="387dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="BMI = cân nặng (kg) / chiều cao² (cm)"
        android:textColor="#EC420D"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>
