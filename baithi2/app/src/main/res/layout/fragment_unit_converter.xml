<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UnitConverterFragment">

    <EditText
        android:id="@+id/edtdonvi"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="296dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtchieucao"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtchieucao"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Nhập đơn vị cần đo"
        android:textColor="#EC420D"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="296dp" />

    <Button
        android:id="@+id/btntinhtoan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="150dp"
        android:text="Tính toán"
        android:textColor="#EDC806"
        android:textSize="15dp"
        android:textStyle="bold"
        app:icon="@android:drawable/star_big_on"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtdonvi" />

    <TextView
        android:id="@+id/txtketqua"
        android:layout_width="342dp"
        android:layout_height="154dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="43dp"
        android:textColor="#EC420D"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btntinhtoan" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rdbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km->m"
            android:textColor="#C51162"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rdbtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kg->g"
            android:textColor="#FFC51162"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rdbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Byte->bit"
            android:textColor="#C51162"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>